<launch>
  <!-- Load the urdf model /-->
  <include file="$(find simple_arm)/launch/upload.launch"/>
  
  <!-- Launch the Arbotix controller /-->
  <include file="$(find simple_arm)/launch/controller.launch"/>

  <!-- Launch the state publisher /-->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
  <!--node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" /-->

  <!-- Open rviz for visual feedback /-->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find simple_arm)/urdf/simple_arm.rviz"/>

</launch>
